<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="15dp">
    <ImageView
        android:id="@+id/tag_photo"
        android:layout_width="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/title_activity_maps"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:textColor="@color/grey_text_color"
        android:textSize="@dimen/medium_text_size"
        android:layout_toRightOf="@+id/tag_photo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_toRightOf="@+id/tag_photo"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/lat_text"
            android:layout_width="wrap_content"
            android:textColor="@color/grey_hint_color"
            android:textSize="@dimen/small_text_size"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lon_text"
            android:layout_width="wrap_content"
            android:textColor="@color/grey_hint_color"
            android:textSize="@dimen/small_text_size"
            android:layout_below="@+id/lat_text"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>